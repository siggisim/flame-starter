{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "dist",
    "target": "ES2016",
    "baseUrl": ".",
    "lib": [
      "es2017",
      "es2019",
      "dom",
      "dom.iterable"
    ],
    "paths": {
      "siggisim/*": [
        "*",
        "dist/bin/*"
      ],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "exclude": [
    "bazel-out",
    "dist"
  ]
}